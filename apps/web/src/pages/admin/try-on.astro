---
import AdminLayout from '../../layouts/AdminLayout.astro'
import { TryOnForm } from '@/components/try-on/TryOnForm'
---

<AdminLayout title="Try-on Demo" maxWidth="max-w-2xl">
  <div class="mb-8 text-center">
    <h1 class="font-display text-3xl font-bold tracking-tight">
      Virtual Try-On
    </h1>
    <p class="text-muted-foreground mt-2">
      Upload your photo and a product to try it on.
    </p>
    <p class="mt-3 text-sm">
      <a class="underline" href="/admin/history">View history saved in DB</a>
    </p>
  </div>

  <TryOnForm client:load />
</AdminLayout>
