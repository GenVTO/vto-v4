{
  "name": "@vto/supabase-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "db:start": "supabase start",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > ./src/generated/database.types.ts && oxfmt --write ./src/generated/database.types.ts",
    "db:types:linked": "supabase gen types typescript --linked > ./src/generated/database.types.ts && oxfmt --write ./src/generated/database.types.ts",
    "db:types:project": "supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" > ./src/generated/database.types.ts && oxfmt --write ./src/generated/database.types.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@supabase/supabase-js": "2.97.0",
    "@vto/logger": "workspace:*",
    "@vto/types": "workspace:*"
  },
  "devDependencies": {
    "supabase": "2.76.14"
  }
}
